<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/social"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_margin="@dimen/two_space"
        app:cardCornerRadius="@dimen/one_space"
        app:strokeColor="@color/colorGreen"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/two_space"
                android:background="?selectableItemBackground"
                android:gravity="center|start"
                android:text="Websites youâ€™ve been protected from in past 30 days."
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/two_space"
                android:drawableStart="@drawable/ic_shield_protected"
                android:drawablePadding="@dimen/two_space"
                android:text="--"
                android:id="@+id/protection_count"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/text_32"
                app:drawableTint="@color/colorGreen"
                app:tint="@color/colorGreen" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/top_domains_parent"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/top_domains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/top_domains"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/domains_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/three_space"
            android:gravity="center"
            android:text="@string/domain"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_domains" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:text="@string/request_count_label"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/domains_label" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/two_space"
            android:layout_marginHorizontal="@dimen/two_space"
            android:layout_marginTop="@dimen/one_space"
            android:id="@+id/horizontal_div"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/domains_label"
            android:background="#DFE2E6" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent=".75"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/six_space"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/verticalDivider"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#DFE2E6" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topDomainsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_div" />


        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>