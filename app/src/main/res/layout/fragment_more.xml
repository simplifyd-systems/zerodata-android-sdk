<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/two_space"
    android:paddingEnd="@dimen/two_space"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/handle_bar"
        android:src="@drawable/ic_handle"
        android:layout_width="@dimen/three_half_space"
        android:layout_height="@dimen/half_space"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/one_space"/>

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/Theme.Simplifyd.Normal.Blue"
        android:id="@+id/cancel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:textSize="@dimen/text_12"
        app:srcCompat="@drawable/ic_back_blue"
        android:padding="10dp"
       />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/one_space"
        android:background="@drawable/ic_rectangle_connected"
        android:padding="@dimen/one_half_space">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/giftBox"
            android:src="@drawable/ic_gift_box"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/intro_title"
            style="@style/Theme.Simplifyd.Extra.Bold.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:layout_marginStart="@dimen/one_half_space"
            android:layout_marginTop="@dimen/two_space"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/giftBox"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Refer a friend" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theme.Simplifyd.Normal.Gray"
            android:id="@+id/intro_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textSize="@dimen/text_12"
            android:layout_marginEnd="@dimen/two_half_space"
            android:layout_marginStart="@dimen/one_half_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro_title"
            app:layout_constraintStart_toEndOf="@id/giftBox"
            app:layout_constraintEnd_toStartOf="@id/arrow_right"
            android:lineHeight="20dp"
            android:text="Earn 50MB for every friend you refer" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow_right"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_space"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/one_space"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/showNotificationsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/one_half_space"
        >


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/intro_title_"
            style="@style/Theme.Simplifyd.Semi.Bold.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:layout_marginTop="@dimen/two_space"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Push notification" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theme.Simplifyd.Normal.Gray"
            android:id="@+id/intro_desc_"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textSize="@dimen/text_12"
            android:layout_marginTop="@dimen/half_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro_title_"
            app:layout_constraintStart_toStartOf="parent"
            android:lineHeight="20dp"
            android:text="Get notified about updates, alerts and new features" />



        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/showNotificationsToogleButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one_half_space"
            android:layout_marginTop="@dimen/one_space"
            android:layout_marginBottom="@dimen/one_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_separtor2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/two_space"
        android:background="@color/demacation"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/referalCodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_space"
        android:background="@color/white"
        android:padding="@dimen/one_space"
        >


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theme.Simplifyd.Semi.Bold.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:layout_marginTop="@dimen/one_half_space"
            android:layout_marginBottom="@dimen/one_half_space"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Get referal code" />


        <ImageView
            android:layout_width="@dimen/one_half_space"
            android:layout_height="@dimen/one_half_space"
            android:layout_marginTop="@dimen/one_space"
            android:layout_marginBottom="@dimen/one_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_forward_gray"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_separtor1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/two_space"
        android:background="@color/demacation"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_half_space"
        android:background="@color/white"
        android:padding="@dimen/one_space"
        android:layout_marginBottom="@dimen/six_space"
        >


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theme.Simplifyd.Semi.Bold.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:textColor="@color/color_red_text"
            android:layout_marginTop="@dimen/one_half_space"
            android:layout_marginBottom="@dimen/one_half_space"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Log out" />


        <ImageView
            android:layout_width="@dimen/one_half_space"
            android:layout_height="@dimen/one_half_space"
            android:layout_marginTop="@dimen/one_space"
            android:layout_marginBottom="@dimen/one_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_forward_gray"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>