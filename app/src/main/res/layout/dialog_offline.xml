<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/three_space"
    android:layout_marginEnd="@dimen/three_space"
    android:layout_marginBottom="@dimen/three_half_space"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/one_space"
    app:cardCornerRadius="@dimen/two_space"
    app:cardElevation="@dimen/half_space"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/three_space"
        >


        <pl.droidsonroids.gif.GifImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#fff"
            android:src="@drawable/ic_no_connection_gif"
            android:layout_gravity="center_horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/intro_title"
            style="@style/Theme.Simplifyd.Extra.Bold.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/two_space"
            android:layout_gravity="center_horizontal"
            android:text="You are offline" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Theme.Simplifyd.Normal.SubBlack"
            android:id="@+id/intro_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="@dimen/text_14"
            android:padding="10dp"
            android:lineHeight="25dp"
            android:text="Turn on your mobile data to use the Zerodata app" />

        <TextView
            android:id="@+id/zerodata_on"
            android:drawablePadding="@dimen/one_space"
            android:padding="@dimen/one_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/two_space"
            android:layout_marginEnd="@dimen/two_space"
            android:layout_marginBottom="@dimen/one_half_space"
            android:gravity="center|start"
            android:background="@drawable/ic_rectangle_connected"
            android:textColor="@color/colorPrimary"
            android:drawableStart="@drawable/ic_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Zerodata will not use your data. Browsing  is 100% free"
            app:layout_constraintBottom_toTopOf="@id/connectionDetailsCardView"/>



    </LinearLayout>





</com.google.android.material.card.MaterialCardView>