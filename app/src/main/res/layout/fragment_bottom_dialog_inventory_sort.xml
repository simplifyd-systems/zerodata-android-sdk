<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/two_space"
        android:gravity="center"
        android:paddingStart="@dimen/two_space"
        android:paddingTop="@dimen/two_space"
        android:paddingEnd="@dimen/two_space"
        android:paddingBottom="@dimen/two_space"
        android:text="@string/how_long_disable"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_12"
        android:textStyle="bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_marginHorizontal="@dimen/two_space"
        android:background="@color/colorDivider" />


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/sort_btns_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorDivider"
        android:orientation="vertical"
        android:showDividers="middle">

        <Button
            android:id="@+id/pause_for_fifteen"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:letterSpacing="0"
            android:text="@string/pause_for_fifteen_minutes"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/pause_for_one_hour"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:letterSpacing="0"
            android:text="@string/pause_for_hour"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:iconGravity="end"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/disable_simplifyd"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:letterSpacing="0"
            android:text="@string/disable_simplifyd"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorRed"
            app:iconGravity="end"
            app:iconTint="@color/colorRed" />

        <Button
            android:id="@+id/cancel_action"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:letterSpacing="0"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorDarkGrey"
            app:iconGravity="end"
            app:iconTint="@color/colorDarkGrey" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>
