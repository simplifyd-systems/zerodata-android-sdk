<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/three_space"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flagImage"
        android:layout_width="@dimen/three_space"
        android:layout_height="@dimen/three_space"
        android:src="@drawable/nigerian_flag"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.Simplifyd.Normal.Black"
        android:gravity="center_horizontal"
        android:text="Nigeria"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toTopOf="@id/flagImage"
        android:layout_marginStart="@dimen/two_space"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/countryCodeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.Simplifyd.Normal.SubBlack"
        android:gravity="center_horizontal"
        android:text="+234"
        android:textSize="@dimen/text_16"
        android:layout_marginEnd="@dimen/one_half_space"
        app:layout_constraintEnd_toStartOf="@id/checkImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/two_space"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/checkImage"
        android:layout_width="@dimen/one_half_space"
        android:layout_height="@dimen/one_half_space"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_check_blue"
         />


</androidx.constraintlayout.widget.ConstraintLayout>