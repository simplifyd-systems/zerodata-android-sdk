<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twelve_space"
        android:layout_margin="@dimen/half_space"
        android:elevation="@dimen/one_half_space"
        app:cardCornerRadius="@dimen/one_half_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pic" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/forward_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCard">


        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_space"
            android:text="@string/account_verification"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:theme="@style/Theme.Simplifyd.BoldIntroText" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_space"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:paddingEnd="@dimen/two_space"
            android:text="akjhdfhjafdjhadjjhaajjhdafshjghjafghdgafsghdafghghdhgaakhgjdhfgghdfhgjadsfhgjdsfdsghfgadfsghdgshfhgdfhadshgfsdjhhjsdfhjsfjkajhkdsfjhkdsfahjdfhjadshahd"
            android:textSize="@dimen/text_16" />
    </LinearLayout>


    <ImageView
        android:id="@+id/forward_icon"
        android:layout_width="@dimen/two_space"
        android:layout_height="@dimen/two_space"
        android:layout_marginStart="@dimen/one_space"
        android:src="@drawable/ic_forward_arrow"
        app:layout_constraintBottom_toBottomOf="@id/textContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>