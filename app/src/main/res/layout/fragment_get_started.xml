<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:background="@drawable/ic_layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity">

    <ScrollView
        android:id="@+id/scrollableParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".12" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/brand_logo"
            android:src="@drawable/ic_logo_symbol" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_space"
            android:text="@string/sign_you_in"
            android:textSize="27sp"
            android:textStyle="bold"
            style="@style/Theme.Simplifyd.Extra.Bold.Black"
             />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_half_space"
            android:text="@string/sign_you_in_desc"
            android:textSize="@dimen/text_14"
            style="@style/Theme.Simplifyd.Normal.SubBlack"
            android:layout_marginEnd="24dp"
            android:lineHeight="25dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_half_space"
            android:text="@string/number"
            android:textSize="@dimen/text_14"
            style="@style/Theme.Simplifyd.Bold.Light.Gray"
            android:layout_marginEnd="24dp"
         />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_and_half_space"
            android:weightSum="2">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".35" />

            <TextView
                android:id="@+id/country_code_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_rectangle_input"
                android:padding="@dimen/one_and_half_space"
                android:drawableStart="@drawable/nigerian_flag"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:gravity="center"
                android:layout_marginEnd="@dimen/one_space"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Theme.Simplifyd.Normal.Gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="+234"/>




            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhoneNumber"
                style="@style/Theme.Simplifyd.Normal.Gray"
                android:padding="@dimen/two_space"
                android:background="@drawable/ic_rectangle_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            style="@style/Theme.Simplifyd.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_space"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/send_otp"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="12dp" />


    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>