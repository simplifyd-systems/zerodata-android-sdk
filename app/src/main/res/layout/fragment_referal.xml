<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorOffWhite"
    android:orientation="vertical"
    android:padding="@dimen/one_half_space"
    tools:context=".ui.main.more.ReferalFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/giftBox"
        android:src="@drawable/ic_gift_box"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/intro_title"
        style="@style/Theme.Simplifyd.Extra.Bold.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/two_space"
        android:layout_gravity="center_horizontal"
        android:text="Invite friends and get free data" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Theme.Simplifyd.Normal.Gray"
        android:id="@+id/intro_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/text_12"
        android:layout_marginTop="@dimen/one_half_space"
        android:layout_marginStart="@dimen/six_space"
        android:layout_marginEnd="@dimen/six_space"
        android:lineHeight="20dp"
        android:text="Copy your code below and share it with your friends and family" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_half_space"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50" />

        <androidx.cardview.widget.CardView
            android:id="@+id/earned"
            android:layout_marginTop="@dimen/two_space"
            android:layout_marginBottom="@dimen/two_space"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/one_half_space"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/one_space"
                    android:text="Earned till now"
                    android:textSize="@dimen/text_14"
                    style="@style/Theme.Simplifyd.Bold.Light.Gray"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Theme.Simplifyd.Extra.Bold.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/one_space"
                    android:layout_marginBottom="@dimen/one_space"
                    android:textSize="@dimen/text_14"
                    android:layout_gravity="start"
                    android:text="%dMB" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/invite"
            android:layout_marginTop="@dimen/two_space"
            android:layout_marginStart="@dimen/one_space"
            android:layout_marginEnd="@dimen/one_space"
            android:layout_marginBottom="@dimen/two_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/one_half_space"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/one_space"
                    android:text="Invited friends"
                    android:textSize="@dimen/text_14"
                    style="@style/Theme.Simplifyd.Bold.Light.Gray"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Theme.Simplifyd.Extra.Bold.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/one_space"
                    android:layout_marginBottom="@dimen/one_space"
                    android:textSize="@dimen/text_14"
                    android:layout_gravity="start"
                    android:text="%s" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/referalcodeView"
        android:layout_marginTop="@dimen/two_space"
        android:layout_marginStart="@dimen/one_space"
        android:layout_marginEnd="@dimen/one_space"
        android:layout_marginBottom="@dimen/two_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/one_half_space"
            android:layout_marginEnd="@dimen/one_half_space"
            android:layout_marginTop="@dimen/two_space"
            android:layout_marginBottom="@dimen/two_space"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/one_space"
                android:text="Your referal code"
                android:textSize="12sp"
                style="@style/Theme.Simplifyd.Bold.Light.Gray"
                />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Theme.Simplifyd.Extra.Bold.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="@dimen/one_space"
                android:layout_marginBottom="@dimen/one_space"
                android:textSize="@dimen/text_14"
                android:layout_gravity="start"
                android:text="%s" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>