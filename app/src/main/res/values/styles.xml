<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->O
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/publicsans_medium</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.Simplifyd.BoldIntroText" parent="">
        <item name="android:fontFamily">@font/gt_walsheim_medium_web</item>
        <item name="fontFamily">@font/gt_walsheim_medium_web</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Simplifyd.ActionButton" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/action_button_text_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ic_button_background</item>
        <item name="android:fontFamily">@font/publicsans_semi_bold</item>
        <item name="fontFamily">@font/publicsans_semi_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.ToggleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">@color/tab_bg_selector</item>
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.Simplifyd.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background_drawable</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/gt_walsheim_medium_web</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="Theme.Simplifyd.FullScreenDialog.Normal" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="Theme.Simplifyd.Normal.Blue" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_regular</item>
        <item name="fontFamily">@font/publicsans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Bold.Blue" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_bold</item>
        <item name="fontFamily">@font/publicsans_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="Theme.Simplifyd.Extra.Bold.Blue" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_extra_bold</item>
        <item name="fontFamily">@font/publicsans_extra_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Bold.White" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_bold</item>
        <item name="fontFamily">@font/publicsans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Normal.White" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_bold</item>
        <item name="fontFamily">@font/publicsans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Extra.Bold.White" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_extra_bold</item>
        <item name="fontFamily">@font/publicsans_extra_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Theme.Simplifyd.Bold.Black" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_bold</item>
        <item name="fontFamily">@font/publicsans_bold</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Semi.Bold.Black" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_semi_bold</item>
        <item name="fontFamily">@font/publicsans_semi_bold</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Normal.Black" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_regular</item>
        <item name="fontFamily">@font/publicsans_regular</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Normal.SubBlack" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_regular</item>
        <item name="fontFamily">@font/publicsans_regular</item>
        <item name="android:textColor">@color/color_black_sub_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Simplifyd.Extra.Bold.Black" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_extra_bold</item>
        <item name="fontFamily">@font/publicsans_extra_bold</item>
        <item name="android:textColor">@color/color_primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Theme.Simplifyd.Medium.Gray" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_medium</item>
        <item name="fontFamily">@font/publicsans_medium</item>
        <item name="android:textColor">@color/color_light_gray_text</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="Theme.Simplifyd.Normal.Gray" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_regular</item>
        <item name="fontFamily">@font/publicsans_regular</item>
        <item name="android:textColor">@color/color_gray_text</item>
        <item name="android:textColorHint">@color/color_hint_text</item>
        <item name="hintTextColor">@color/color_hint_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Simplifyd.Bold.Light.Gray" parent="AppTheme">
        <item name="android:fontFamily">@font/publicsans_bold</item>
        <item name="fontFamily">@font/publicsans_bold</item>
        <item name="android:textColor">@color/color_light_gray_text</item>
        <item name="android:textSize">14sp</item>
    </style>











</resources>