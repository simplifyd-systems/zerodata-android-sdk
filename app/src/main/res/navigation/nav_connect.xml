<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_connect"
    app:startDestination="@id/navigation_overview">

    <fragment
        android:id="@+id/navigation_overview"
        android:name="com.simplifyd.zerodata.android.ui.main.overview.OverviewFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_navigation_overview_to_navigation_webview"
            app:destination="@id/navigation_webview" />

        <action
            android:id="@+id/action_navigation_overview_to_navigation_settings"
            app:destination="@id/navigation_settings" />
        <action
            android:id="@+id/action_navigation_overview_to_navigation_notification"
            app:destination="@id/navigation_notifications" />

        <action
            android:id="@+id/action_navigation_overview_to_update"
            app:destination="@id/navigation_updateApp"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/navigation_updateApp"
        android:name="com.simplifyd.zerodata.android.ui.update.UpdateFragment"
        android:label="fragment_update">

    </fragment>


    <fragment
        android:id="@+id/navigation_webview"
        android:name="com.simplifyd.zerodata.android.ui.main.webview.WebViewFragment"
        android:label="Webpage"
        tools:layout="@layout/fragment_webview">

        <argument
            android:name="webUrl"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.simplifyd.zerodata.android.ui.main.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"></fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.simplifyd.zerodata.android.ui.main.notification.NotificationFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notification"></fragment>


</navigation>