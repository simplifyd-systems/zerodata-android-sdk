<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding_navigation"
    app:startDestination="@id/navigation_intro_screens">

    <fragment
        android:id="@+id/navigation_intro_screens"
        android:name="com.simplifyd.zerodata.android.ui.intro.IntroductionFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_introduction">

        <action
            android:id="@+id/action_navigation_intro_screens_to_navigation_sign_in"
            app:destination="@id/navigation_sign_in"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />


    </fragment>


    <fragment
        android:id="@+id/navigation_sign_in"
        android:name="com.simplifyd.zerodata.android.ui.auth.getStarted.GetStartedFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_get_started">

        <action
            android:id="@+id/action_navigation_sign_in_to_navigation_verification"
            app:destination="@id/navigation_verification"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_navigation_sign_in_to_countryCodeDialog"
            app:destination="@id/countryCodeDialog"
            />

    </fragment>

    <dialog
        android:id="@+id/countryCodeDialog"
        android:name="com.simplifyd.zerodata.android.ui.auth.countrycode.CountryCodeDialog"
        tools:layout="@layout/dialog_country_code">

    </dialog>

    <fragment
        android:id="@+id/navigation_verification"
        android:name="com.simplifyd.zerodata.android.ui.auth.verify.VerificationFragment"
        android:label="Verification"
        tools:layout="@layout/fragment_verification">

        <argument
            android:name="phoneNumber"
            app:argType="string" />


        <action
            android:id="@+id/action_navigation_verification_to_navigation_referral"
            app:destination="@id/navigation_referral"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>


    <fragment
        android:id="@+id/navigation_referral"
        android:name="com.simplifyd.zerodata.android.ui.auth.referral.EnterReferralCodeFragment"
        android:label="Referral"
        tools:layout="@layout/fragment_enter_referral_code">
    </fragment>



</navigation>